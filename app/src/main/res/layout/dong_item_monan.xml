<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:textStyle="bold"
        android:layout_margin="5dp"
        android:textColor="#f20"
        android:textSize="28sp"
        android:id="@+id/textviewTen"
        android:text="Tên món ăn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_below="@id/textviewTen"
        android:textStyle="italic"
        android:layout_margin="5dp"
        android:textColor="#2053d4"
        android:textSize="25sp"
        android:id="@+id/textviewNamsinh"
        android:text="Giá món ăn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_alignParentRight="true"
        android:layout_alignBaseline="@id/textviewNamsinh"
        android:textStyle="italic"
        android:layout_margin="5dp"
        android:textColor="#2dba7f"
        android:textSize="23sp"
        android:id="@+id/textviewDiachi"
        android:text="Địa chỉ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>